					{
						"in": "query",
						"name": "page",
						"schema": {
							"type": "integer",
							"minimum": 1,
							"default": 1
						},
						"description": "分頁頁碼（可選）"
					},
					{
						"in": "query",
						"name": "limit",
						"schema": {
							"type": "integer",
							"minimum": 1,
							"maximum": 100,
							"default": 10
