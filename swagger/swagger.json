				"tags": ["商品"],
				"parameters": [
					{
						"in": "query",
						"name": "page",
						"schema": {
							"type": "integer",
							"minimum": 1,
							"default": 1
						},
						"description": "分頁頁碼（可選）"
					},
					{
						"in": "query",
						"name": "limit",
						"schema": {
							"type": "integer",
							"minimum": 1,
							"maximum": 100,
							"default": 10
						},
						"description": "每頁顯示的商品數量（可選）"
					}
				],
				"responses": {
					"200": {
						"description": "成功取得商品列表",
